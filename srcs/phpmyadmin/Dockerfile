FROM php-fpm

#####################################################################################################
#                                       Packages intalation                                         #
#####################################################################################################

RUN apk add wget bash phpmyadmin --no-cache
RUN sed -i "s|listen = 127.0.0.1:9000|listen = 5000|g" /etc/php7/php-fpm.d/www.conf
#####################################################################################################
#                                Installation of phpmyadmin                                         #
#####################################################################################################

ADD ./config.inc.php /tmp/config.inc.php
ADD ./init.sh ./init.sh

EXPOSE 5000

CMD php-fpm7 -F
